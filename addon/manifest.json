{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "thunderbird-conversations-modernized@michalmielczynski.dev",
      "strict_min_version": "140.0a1",
      "strict_max_version": "143.0a1"
    }
  },
  "author": "Michal Mielczynski (based on work by Jonathan Protzenko)",
  "name": "__MSG_extensionName__",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "version": "4.4.0",
  "homepage_url": "https://github.com/michalmielczynski/thunderbird-conversations",
  "background": {
    "scripts": ["background/background.mjs"],
    "type": "module"
  },
  "icons": {
    "32": "icon.png"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options/options.html"
  },
  "permissions": [
    "accountsRead",
    "addressBooks",
    "messagesRead",
    "messagesModifyPermanent",
    "messagesMove",
    "messagesDelete",
    "messagesUpdate",
    "messagesTags",
    "messagesTagsList",
    "storage",
    "tabs"
  ],
  "experiment_apis": {
    "conversations": {
      "schema": "experiment-api/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["conversations"]],
        "script": "experiment-api/api.js",
        "events": ["startup"]
      }
    },
    "convCalendar": {
      "schema": "experiment-api/calendarSchema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["convCalendar"]],
        "script": "experiment-api/calendarApi.js"
      }
    },
    "convCompose": {
      "schema": "experiment-api/composeSchema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["convCompose"]],
        "script": "experiment-api/composeApi.js"
      }
    },
    "convContacts": {
      "schema": "experiment-api/contactsSchema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["convContacts"]],
        "script": "experiment-api/contactsApi.js"
      }
    },
    "convGloda": {
      "schema": "experiment-api/glodaSchema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["convGloda"]],
        "script": "experiment-api/glodaApi.js"
      }
    },
    "convMsgWindow": {
      "schema": "experiment-api/msgWindowSchema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["convMsgWindow"]],
        "script": "experiment-api/msgWindowApi.js"
      }
    },
    "convOpenPgp": {
      "schema": "experiment-api/openPgpSchema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["convOpenPgp"]],
        "script": "experiment-api/openPgpApi.js"
      }
    }
  },
  "commands": {
    "quick_compose": {
      "suggested_key": {
        "default": "Ctrl+Shift+N"
      },
      "description": "Open the quick compose window"
    }
  }
}
